{
  "manifest_version": 3,
  "name": "Yooliz Auto-Fill POC",
  "version": "1.0.0",
  "description": "Proof of concept extension to auto-fill Yooliz estimates.",
  "action": {
    "default_title": "Test Auto-Fill",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://yootrad.yooliz.com/liste-des-devis/creer-un-devis/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://yootrad.yooliz.com/liste-des-devis/creer-un-devis/"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
